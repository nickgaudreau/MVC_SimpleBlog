@model SimpleBlog.Areas.Admin.ViewModels.PostsIndex


<h1>Admin Posts</h1>

<div class="btn-toolbar">
    <div class="btn-group">
        <a href="@Url.Action("new")" class="btn btn-primary btn-sm"><i class="glyphicon glyphicon-plus"></i>Create Post</a>
    </div>

    <div class="btn-group pull-right">
        @if (Model.Posts.HasPreviousPage)
        {
            <!-- Index => creating a link going to have the prev page in the quesry string-->
            <a href="@Url.Action("Index", new {page = Model.Posts.PreviousPage})" class="btn btn-primary btn-sm">
                <i class="glyphicon glyphicon-chevron-left"></i>Previous Page
            </a>
        }
        else
        {

            <a href="#" class="btn btn-primary btn-disabled btn-sm">
                <i class="glyphicon glyphicon-chevron-left"></i>Previous Page
            </a>
        }
        @if (Model.Posts.HasNextPage)
        {
            <!-- Index => creating a link going to have the next page in the query string-->
            <a href="@Url.Action("Index", new {page = Model.Posts.NextPage})" class="btn btn-primary btn-sm">
                Next Page <i class="glyphicon glyphicon-chevron-right"></i>
            </a>
        }
        else
        {

            <a href="#" class="btn btn-primary btn-disabled btn-sm">
                Next Page <i class="glyphicon glyphicon-chevron-right"></i>
            </a>
        }
    </div>
</div>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Tags</th>
        <th>Date</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var post in Model.Posts)
    {

        var cls = "";
        if (post.IsDeleted)
        {
            cls = "danger";
        }

        <tr class="@cls">
            <td>@post.Title</td>
            <td>@post.User.Username</td>
            <td>@string.Join(",", post.Tags.Select(t => t.Name))</td>
            <td>@post.CreatedAt</td>
            <td>
                <!-- edit => creating a link going to have the post id page in the query string-->
                <a href="@Url.Action("edit", new {post.Id})"class="btn btn-xs btn-primary">
                    <i class="glyphicon glyphicon-edit"></i> edit
                </a>

                @if (!post.IsDeleted)
                {
                    <div class="btn-group btn-group-xs">
                        <a href="@Url.Action("Trash", new{post.Id})" class="btn btn-danger">
                            <i class="glyphicon glyphicon-remove"></i> Trash
                        </a>
                        <a href="#" class="dropdown-toggle btn btn-danger" data-toggle="dropdown" role="menu" aria-haspopup="true" aria-expanded="false"><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="@Url.Action("Delete", new{post.Id})">
                                    <i class="glyphicon glyphicon-remove"></i> Delete
                                </a>
                            </li>
                        </ul>
                        <a href="@Url.Action("Delete", new { post.Id })">
                            <i class="glyphicon glyphicon-remove"></i> Delete
                        </a>
                    </div>
                }
                else
                {
                    <a href="@Url.Action("Restore", new { post.Id })" class="btn btn-xs btn-success"><i class="glyphicon glyphicon-plus"></i> Restore</a>
                }
            </td>
        </tr>
    }
    </tbody>


</table>

